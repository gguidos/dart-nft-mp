{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "rootDir": "src",
    "lib": ["ES6", "DOM", "ES2017"],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "src/app/public",
    "setup-env.js"
  ]
}
